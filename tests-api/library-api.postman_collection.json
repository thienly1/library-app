{
  "info": {
    "name": "Library API Tests",
    "description": "API tests for the Library application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "bookId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health endpoint returns OK",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/health"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has healthy status', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.status).to.eql('healthy');",
                  "});",
                  "",
                  "pm.test('Service name is correct', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.service).to.eql('library-api');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books - GET All",
      "item": [
        {
          "name": "Get all books returns array",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/books"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(Array.isArray(data)).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books - POST Create",
      "item": [
        {
          "name": "Create book with valid data",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/books",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Test Book\",\n    \"author\": \"Test Author\",\n    \"isbn\": \"978-1234567890\",\n    \"year\": 2024,\n    \"genre\": \"Fiction\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function() {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has correct title', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.title).to.eql('Test Book');",
                  "});",
                  "",
                  "pm.test('Response has correct author', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.author).to.eql('Test Author');",
                  "});",
                  "",
                  "pm.test('Response has id', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.id).to.be.a('number');",
                  "    pm.collectionVariables.set('bookId', data.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create book fails with empty title",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/books",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"\",\n    \"author\": \"Test Author\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 422', function() {",
                  "    pm.response.to.have.status(422);",
                  "});",
                  "",
                  "pm.test('Response has validation error', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.detail).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create book fails with empty author",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/books",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Valid Title\",\n    \"author\": \"\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 422', function() {",
                  "    pm.response.to.have.status(422);",
                  "});",
                  "",
                  "pm.test('Response has validation error for author', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.detail).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create book fails with invalid year",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/books",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Valid Title\",\n    \"author\": \"Valid Author\",\n    \"year\": 500\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 422', function() {",
                  "    pm.response.to.have.status(422);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books - GET Single",
      "item": [
        {
          "name": "Get single book by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/books/{{bookId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has book data', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.id).to.be.a('number');",
                  "    pm.expect(data.title).to.be.a('string');",
                  "    pm.expect(data.author).to.be.a('string');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get non-existent book returns 404",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/books/99999"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function() {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test('Response has error detail', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.detail).to.include('not found');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books - PUT Update",
      "item": [
        {
          "name": "Update book with valid data",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/books/{{bookId}}",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Updated Title\",\n    \"genre\": \"Updated Genre\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Title is updated', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.title).to.eql('Updated Title');",
                  "});",
                  "",
                  "pm.test('Genre is updated', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.genre).to.eql('Updated Genre');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update non-existent book returns 404",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/books/99999",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Will Not Work\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function() {",
                  "    pm.response.to.have.status(404);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books - Search",
      "item": [
        {
          "name": "Search books by query parameter",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?search=Updated",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "search",
                  "value": "Updated"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is filtered', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(Array.isArray(data)).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Search books by genre",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?genre=Updated",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "genre",
                  "value": "Updated"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function() {",
                  "    const data = pm.response.json();",
                  "    pm.expect(Array.isArray(data)).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books - DELETE",
      "item": [
        {
          "name": "Delete book",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/books/{{bookId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 204', function() {",
                  "    pm.response.to.have.status(204);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Delete non-existent book returns 404",
          "request": {
            "method": "DELETE",
